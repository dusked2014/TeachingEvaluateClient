<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<RelativeLayout android:id="@+id/rlHeader"
					android:layout_width="match_parent"
					android:layout_height="170dp"
					android:background="@color/md_material_blue_800"
					android:padding="10dp">

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/civAvatar"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_centerVertical="true"
			android:src="@mipmap/profile"
			app:border_color="@android:color/white"
			app:border_width="2dp"/>

		<TextView android:id="@+id/tvName"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginLeft="7dp"
				  android:layout_marginTop="10dp"
				  android:layout_toRightOf="@id/civAvatar"
				  android:layout_alignTop="@+id/civAvatar"
				  android:text="胡绪浩"
				  android:textColor="#FFF"
				  android:textSize="16sp"/>

		<TextView android:id="@+id/tvDepartment"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_below="@id/tvName"
				  android:layout_marginLeft="7dp"
				  android:layout_marginTop="10dp"
				  android:layout_toRightOf="@id/civAvatar"
				  android:text="计算机科学与技术系"
				  android:textColor="@android:color/white"
				  android:textSize="14sp"/>
	</RelativeLayout>

</LinearLayout>